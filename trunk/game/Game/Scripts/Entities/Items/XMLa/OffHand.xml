			<animation target="ownerloop" name="idle" />
		</action>
		<action name="throw_object">
			<animation target="firstperson" name="throw_object_twohanded" />
			<animation target="owner" name="throw" />
		</action>
		<action name="drop_object">
			<animation target="ownerloop" name="idle" />
		</action>
		<action name="idle">
			<animation target="firstperson" name="nw_arms_idle_relaxed" />
			<animation target="owner" name="idle" />
		</action>
		<action name="swim_idle">
			<animation target="firstperson" name="" speed=".4" />
